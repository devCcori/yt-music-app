{
  "name": "mi-youtube-music",
  "version": "1.0.0",
  "description": "Cliente de escritorio para YouTube Music",
  "main": "main.js",
  "homepage": "https://github.com/devCcori/yt-music-app",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": {
    "name": "Ccori",
    "email": "lvpccori@gmail.com"
  },
  "license": "MIT",
